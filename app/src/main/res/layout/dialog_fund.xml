<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_text"
        android:textSize="25sp"
        android:layout_marginLeft="25dp"
        android:textColor="#000000"/>
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/underweight_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/underweight_option"/>
        <RadioButton android:id="@+id/normalweight_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/normal_option"/>
        <RadioButton android:id="@+id/overweight_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/overweight_option"/>
    </RadioGroup>

</LinearLayout>