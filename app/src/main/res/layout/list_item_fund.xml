<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.25"
            android:orientation="vertical"
            android:padding="4dp" >

            <TextView
                android:id="@+id/list_item_fund_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/list_item_fund_company_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/list_item_fund_title_text_view"
                android:textSize="12sp"
                android:padding="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.75"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_marginRight="0dp">

            <ImageButton
                android:id="@+id/list_item_fund_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@android:drawable/ic_menu_delete"/>

            <TextView
                android:id="@+id/list_item_fund_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/list_item_fund_weight_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/list_item_fund_price_text_view"
                android:textSize="12sp"
                android:padding="4dp"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>